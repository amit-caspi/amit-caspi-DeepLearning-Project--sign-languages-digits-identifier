WindowManager:
    MainWindow:
    OptionsWindow:
    TrainWindow:
    PredictWindow:


<MainWindow>:
    name: "main"
    
    GridLayout:
        cols: 1
        Label:
            text: "Sign Language's Digits identifier"
			font_size: 40
			canvas.before:
                Color:
                    rgba: 255,0,255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
			 
                
        Button:
            text: "let's get started"
			font_size: 30
			background_color: 1, 0, 1, 1
            on_release: app.root.current = "options"


<OptionsWindow>:
    name: "options"
    GridLayout:
        cols:1 
        Button:
            text: "Train"
			font_size: 30
			background_normal: 'Train.jpg'
            on_release: app.root.current = "train"
			
        
        Button:
            text: "Predict"
			font_size: 30

			background_normal: 'Predict.jpg'
            on_release: app.root.current = "predict"
			
		Button:
            text: "Predict Random Images"
			font_size: 30

			background_normal: 'Random.jpg'
            on_press:root.PredictRandom()
		
		Button:
            text: "Take An Image"
			font_size: 30

			background_normal: 'TakeImage.jpg'

            on_press:root.takeImage()
        
        Button:
			background_normal: 'GoBack.jpg'
            on_release: app.root.current = "main"
       

<TrainWindow>:
    name: "train"
    model: model
    label:label
    plot:plot
    
    GridLayout:
        cols:1
        
        GridLayout:
            cols:2
            Label:
                text: "Enter the model path"
				font_size: 20
				canvas.before:
					Color:
						rgba: 0,0,255, 1
					Rectangle:
						pos: self.pos
						size: self.size
			
            TextInput:
                id: model
                multiline: False
            
            Label:
                text: "Enter the label path"
				font_size: 20

				canvas.before:
					Color:
						rgba: 0,0,255, 1
					Rectangle:
						pos: self.pos
						size: self.size
					
            TextInput:
                id: label
                multiline: False
                
            Label:
                text: "Enter the output accuracy/loss plot path"
				font_size: 20

				canvas.before:
					Color:
						rgba: 0,0,255, 1
					Rectangle:
						pos: self.pos
						size: self.size
            TextInput:
                id: plot
                multiline: False
            
        Button:
			background_normal: 'Submit.jpg'
            on_press:root.Submit()
        
        Button:
			background_normal: 'GoBack.jpg'
            on_release: app.root.current = "options"
            
    
<PredictWindow>:
    name:"predict"
    
    image: image
    
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            Label:
                text: "Enter the image path"
				font_size: 25

				canvas.before:
					Color:
						rgba: 0,128,128, 1
					Rectangle:
						pos: self.pos
						size: self.size
            TextInput:
                id: image
                multiline: False
        Button:
			background_normal: 'Submit.jpg'
            on_press:root.Submit()
        
        Button:
			background_normal: 'GoBack.jpg'
            on_release: app.root.current = "options"
            
